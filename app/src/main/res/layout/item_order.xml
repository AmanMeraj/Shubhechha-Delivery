<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/orange"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="3dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header with Order ID and Time -->
            <LinearLayout
                android:paddingHorizontal="16dp"
                android:paddingTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvOrderId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter"
                    android:text="Order ID : #28292999"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/linear_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/stopwatch"
                        app:tint="@color/orange" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_extrabold"
                        android:text="2 min"
                        android:textColor="@color/orange"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Product Images RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvProductImages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="16dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_product_image" />

            <!-- Final Total -->
            <TextView
                android:paddingHorizontal="16dp"
                android:id="@+id/tvFinalTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/inter_bold"
                android:text="Final Total : â‚¹ 1023"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <!-- Accept and Reject Buttons -->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/buttonsLayout"
                android:weightSum="2"
                android:paddingHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Accept Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAccept"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight=".8"
                    android:fontFamily="@font/inter_semibold"
                    android:text="Accept"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:backgroundTint="#41DBB0"
                    app:cornerRadius="24dp"
                    app:icon="@drawable/check"
                    app:iconGravity="textStart"
                    app:iconTint="@color/white" />

                <!-- Reject Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnReject"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight=".8"
                    android:fontFamily="@font/inter_bold"
                    android:text="Reject"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:backgroundTint="#DB4141"
                    app:cornerRadius="24dp"
                    app:icon="@drawable/ic_close"
                    app:iconGravity="textStart"
                    app:iconTint="@color/white" />

            </LinearLayout>

            <ImageView
                android:layout_gravity="end"
                android:id="@+id/iv_arrow"
                android:layout_marginTop="-15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_button2"
                android:padding="12dp"
                android:layout_marginEnd="-3dp"
                android:rotation="180"
                android:src="@drawable/kk_back"
                app:tint="@color/white" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>